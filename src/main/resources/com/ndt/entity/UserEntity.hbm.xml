<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="com.ndt.entity.UserEntity" table="user" schema="ndt">
		<id name="userid">
			<column name="userid" sql-type="int(10)"/>
		</id>
		<property name="loginname">
			<column name="loginname" sql-type="varchar(255)"/>
		</property>
		<property name="secret">
			<column name="secret" sql-type="varchar(255)"/>
		</property>
		<property name="username">
			<column name="username" sql-type="varchar(255)"/>
		</property>
		<property name="phone">
			<column name="phone" sql-type="varchar(255)"/>
		</property>
		<property name="sex">
			<column name="sex" sql-type="varchar(255)" not-null="true"/>
		</property>
		<property name="email">
			<column name="email" sql-type="varchar(255)"/>
		</property>
	</class>
</hibernate-mapping>